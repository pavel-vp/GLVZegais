<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="ПЕТРОВ ВАСИЛИЙ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvUser"/>
    <TextView
            android:text="Выберите магазин"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:id="@+id/textView"/>
    <TextView
            android:text="Не выбран"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvShopChosen"/>
    <Button
            android:text="Выбор магазина"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonChoose"/>
    <Button
            android:text="Очистить все данные"
            android:layout_width="match_parent"
            android:enabled="true"
            android:layout_height="wrap_content" android:id="@+id/buttonLoadDocs"/>
    <Button
        android:text="Экспорт БД"
        android:layout_width="match_parent"
        android:enabled="true"
        android:layout_height="wrap_content" android:id="@+id/buttonExportDb"/>
    <Button
            android:text="Главное меню"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonMainMenu"/>
    <Button
            android:text="Выход"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonExit"/>
</LinearLayout>