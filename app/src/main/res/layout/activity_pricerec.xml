<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Сканируйте марку/ШК"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:background="@drawable/im_black"
            android:textColor="@color/colorWarningLabel"
            android:id="@+id/tvCaption"/>
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorHeaderRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <include android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 layout="@layout/rec_price"
                 android:id="@+id/inclRecPrice"
        />
        <Button
                android:text="Изменить комментарий"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnChangeComment"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvContent"/>


</LinearLayout>